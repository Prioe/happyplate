extends ../layouts/base

block head
  style.
    body {
      font-family: Helvetica, sans-serif;
      text-align: center;
      background: #f1c40f;
      transition: background 500ms ease;
      color: #424545;
    }
    .error h1 {
      font-size: 10em;
    }
    .error h2 {
      top: 10%;
    }
    .error h2.emoji {
      font-size: 4em;
    }
    body:hover, body:active {
      background: #2ecc71;
      transition: background 3s ease-in;
    }

block variables
  - var mocha = 'error';
  - var title = errorTitle

block content
  .error
    h2.emoji ◕ ︵ ◕
    h2= errorMessage
    h1= statusCode
